<Window x:Class="POSK.ClientApp.SetupTerminal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POSK.ClientApp"
        mc:Ignorable="d"
        Title="Setup Terminal" Height="300" Width="500" WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="{DynamicResource Imgs.Screen.Back}">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    <TextBlock Text="Enter terminal key provided by server" Grid.Row="0" HorizontalAlignment="Stretch" TextAlignment="Center" VerticalAlignment="Center" Padding="5" FontSize="24" Foreground="#FFE1E1E1"/>
        <TextBox x:Name="txtTerminalKey" Grid.Row="1" Width="250" HorizontalAlignment="Stretch" TextAlignment="Center" VerticalAlignment="Center" Padding="5" FontSize="24"/>
        <Button Content="Initialize" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" x:Name="btnInitialize" Click="btnInitialize_Click"  FontSize="24" Padding="10"/>
  </Grid>
</Window>
